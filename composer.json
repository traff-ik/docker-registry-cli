{
  "name": "traffaret/docker-registry-cli",
  "description": "Docker Registry CLI",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Oleg Tikhonov",
      "email": "to@toro.one"
    }
  ],
  "minimum-stability": "stable",
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.4"
    },
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": ">=7.4",
    "amphp/amp": "^2.5",
    "amphp/http-client": "^4.5",
    "ext-json": "*",
    "league/climate": "^3.6",
    "monolog/monolog": "^2.1",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "amphp/phpunit-util": "^1.4",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9.4",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "Traff\\Registry\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Traff\\Registry\\Tests\\": "tests",
      "Traff\\Registry\\Tests\\Functional\\": "tests/functional/",
      "Traff\\Registry\\Tests\\Unit\\": "tests/unit/"
    }
  },
  "scripts": {
    "check": [
      "@code-style",
      "@test:unit"
    ],
    "test": "phpunit",
    "test:unit": "phpunit --testsuite unit",
    "test:functional": "phpunit --testsuite functional",
    "test:with-coverage": "phpunit --testsuite unit --coverage-clover clover.xml",
    "code-style": "./vendor/bin/phpcs",
    "code-style:fix": "./vendor/bin/phpcbf"
  }
}
